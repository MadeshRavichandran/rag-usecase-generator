{
  "testCases": [
    {
      "name": "Valid signup",
      "request": {
        "method": "POST",
        "url": "/api/signup",
        "body": {
          "email": "test@example.com",
          "password": "password123"
        }
      },
      "expectedResponse": {
        "statusCode": 201,
        "description": "User created successfully"
      }
    },
    {
      "name": "Invalid email",
      "request": {
        "method": "POST",
        "url": "/api/signup",
        "body": {
          "email": "invalid_email",
          "password": "password123"
        }
      },
      "expectedResponse": {
        "statusCode": 400,
        "description": "Validation error"
      }
    },
    {
      "name": "Empty password",
      "request": {
        "method": "POST",
        "url": "/api/signup",
        "body": {
          "email": "test@example.com",
          "password": ""
        }
      },
      "expectedResponse": {
        "statusCode": 400,
        "description": "Validation error"
      }
    },
    {
      "name": "Existing email",
      "request": {
        "method": "POST",
        "url": "/api/signup",
        "body": {
          "email": "test@example.com",
          "password": "password123"
        }
      },
      "expectedResponse": {
        "statusCode": 409,
        "description": "Email already exists"
      }
    },
    {
      "name": "Missing email",
      "request": {
        "method": "POST",
        "url": "/api/signup",
        "body": {
          "password": "password123"
        }
      },
      "expectedResponse": {
        "statusCode": 400,
        "description": "Validation error"
      }
    },
    {
      "name": "Missing password",
      "request": {
        "method": "POST",
        "url": "/api/signup",
        "body": {
          "email": "test@example.com"
        }
      },
      "expectedResponse": {
        "statusCode": 400,
        "description": "Validation error"
      }
    }
  ]
}